{% extends "base.html" %}

{% block title %}Farm Control Center - KPI Dashboard{% endblock %}
{% block page_title %}Farm Control Center{% endblock %}

{% block head_extra %}
<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
        --success-gradient: linear-gradient(135deg, #20c997 0%, #198754 100%);
        --danger-gradient: linear-gradient(135deg, #dc3545 0%, #bb2d3b 100%);
        --warning-gradient: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
        --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2);
        --card-shadow-hover: 0 20px 25px -5px rgba(0, 0, 0, 0.3), 0 10px 10px -5px rgba(0, 0, 0, 0.2);
        --app-bg: #1a1d29;
        --card-bg: #212529;
        --card-border: rgba(255, 255, 255, 0.1);
    }

    #main-content {
        background: var(--app-bg) !important;
    }

    .kpi-card {
        background: var(--card-bg);
        border-radius: 12px;
        box-shadow: var(--card-shadow);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid var(--card-border);
        position: relative;
        overflow: hidden;
    }

    .kpi-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: var(--primary-gradient);
        opacity: 0;
        transition: opacity 0.3s;
    }

    .kpi-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--card-shadow-hover);
        border-color: rgba(13, 110, 253, 0.3);
    }

    .kpi-card:hover::before {
        opacity: 1;
    }

    .stat-card {
        background: var(--card-bg);
        border-radius: 12px;
        padding: 1.5rem;
        border: 1px solid var(--card-border);
        position: relative;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .stat-card::after {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(13, 110, 253, 0.1) 0%, transparent 70%);
        opacity: 0;
        transition: opacity 0.3s;
    }

    .stat-card:hover {
        transform: translateY(-4px);
        border-color: rgba(13, 110, 253, 0.3);
        box-shadow: var(--card-shadow-hover);
    }

    .stat-card:hover::after {
        opacity: 1;
    }

    .stat-icon {
        width: 56px;
        height: 56px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        font-size: 1.75rem;
        margin-bottom: 1rem;
        position: relative;
        z-index: 1;
    }

    .stat-value {
        font-size: 2.25rem;
        font-weight: 700;
        line-height: 1;
        margin: 0.5rem 0;
        color: #e9ecef;
        position: relative;
        z-index: 1;
    }

    .stat-label {
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: #adb5bd;
        font-weight: 600;
        position: relative;
        z-index: 1;
    }

    .stat-trend {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        font-size: 0.875rem;
        font-weight: 600;
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        margin-top: 0.5rem;
        position: relative;
        z-index: 1;
    }

    .stat-trend.positive {
        background: rgba(32, 201, 151, 0.15);
        color: #20c997;
        border: 1px solid rgba(32, 201, 151, 0.3);
    }

    .stat-trend.negative {
        background: rgba(220, 53, 69, 0.15);
        color: #dc3545;
        border: 1px solid rgba(220, 53, 69, 0.3);
    }

    .nav-tabs {
        border: none;
        background: var(--card-bg);
        border-radius: 12px;
        padding: 0.5rem;
        border: 1px solid var(--card-border);
    }

    .nav-tabs .nav-link {
        border: none;
        color: #adb5bd;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .nav-tabs .nav-link:hover {
        color: #e9ecef;
        background: rgba(13, 110, 253, 0.1);
    }

    .nav-tabs .nav-link.active {
        background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
        color: white;
        box-shadow: 0 4px 6px rgba(13, 110, 253, 0.3);
    }

    .chart-container {
        position: relative;
        height: 350px;
        padding: 1rem 0;
    }

    .activity-timeline {
        max-height: 400px;
        overflow-y: auto;
    }

    .activity-timeline::-webkit-scrollbar {
        width: 6px;
    }

    .activity-timeline::-webkit-scrollbar-track {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
    }

    .activity-timeline::-webkit-scrollbar-thumb {
        background: rgba(13, 110, 253, 0.5);
        border-radius: 10px;
    }

    .activity-timeline::-webkit-scrollbar-thumb:hover {
        background: rgba(13, 110, 253, 0.7);
    }

    .activity-item {
        border-left: 3px solid #495057;
        padding: 1rem 1.5rem;
        position: relative;
        transition: all 0.2s;
    }

    .activity-item::before {
        content: '';
        position: absolute;
        left: -7px;
        top: 1.5rem;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: var(--card-bg);
        border: 3px solid #495057;
    }

    .activity-item:hover {
        background: rgba(13, 110, 253, 0.05);
    }

    .activity-item.success {
        border-left-color: #20c997;
    }

    .activity-item.success::before {
        border-color: #20c997;
        background: #20c997;
    }

    .activity-item.failed {
        border-left-color: #dc3545;
    }

    .activity-item.failed::before {
        border-color: #dc3545;
        background: #dc3545;
    }

    .activity-item.maintenance {
        border-left-color: #ffc107;
    }

    .activity-item.maintenance::before {
        border-color: #ffc107;
        background: #ffc107;
    }

    .performance-table {
        width: 100%;
    }

    .performance-table thead th {
        background: rgba(13, 110, 253, 0.1);
        color: #e9ecef;
        font-weight: 600;
        padding: 1rem;
        text-align: left;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        border-bottom: 2px solid rgba(13, 110, 253, 0.3);
    }

    .performance-table tbody tr {
        transition: background 0.2s;
        border-bottom: 1px solid var(--card-border);
    }

    .performance-table tbody tr:hover {
        background: rgba(13, 110, 253, 0.05);
    }

    .performance-table tbody td {
        padding: 1rem;
        color: #dee2e6;
    }

    .badge-metric {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .badge-success {
        background: rgba(32, 201, 151, 0.15);
        color: #20c997;
        border: 1px solid rgba(32, 201, 151, 0.3);
    }

    .badge-warning {
        background: rgba(255, 193, 7, 0.15);
        color: #ffc107;
        border: 1px solid rgba(255, 193, 7, 0.3);
    }

    .badge-danger {
        background: rgba(220, 53, 69, 0.15);
        color: #dc3545;
        border: 1px solid rgba(220, 53, 69, 0.3);
    }

    .section-header {
        color: #e9ecef;
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .section-header i {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(13, 110, 253, 0.2);
        border-radius: 10px;
        font-size: 1.25rem;
        color: #0d6efd;
    }

    .card-header-custom {
        background: rgba(13, 110, 253, 0.05);
        border-bottom: 1px solid var(--card-border);
        padding: 1.25rem 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .card-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: #e9ecef;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .card-subtitle {
        font-size: 0.875rem;
        color: #adb5bd;
        margin-top: 0.25rem;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .fade-in-up {
        animation: fadeInUp 0.6s ease-out;
    }

    .metric-comparison {
        display: flex;
        justify-content: space-between;
        gap: 1rem;
        padding: 1.5rem;
        background: rgba(13, 110, 253, 0.05);
        border-radius: 12px;
        margin-top: 1rem;
        border: 1px solid var(--card-border);
    }

    .metric-item {
        flex: 1;
        text-align: center;
    }

    .metric-item-label {
        font-size: 0.75rem;
        color: #adb5bd;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.5rem;
    }

    .metric-item-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: #e9ecef;
    }

    .metric-box {
        background: rgba(13, 110, 253, 0.05);
        border: 1px solid var(--card-border);
        border-radius: 12px;
        padding: 1.5rem;
        text-align: center;
    }

    .metric-box-label {
        font-size: 0.875rem;
        color: #adb5bd;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.75rem;
    }

    .metric-box-value {
        font-size: 2.5rem;
        font-weight: 700;
        color: #e9ecef;
        margin-bottom: 0.5rem;
    }

    .metric-box-subtitle {
        font-size: 0.875rem;
        color: #6c757d;
    }
</style>
{% endblock %}

{% block content %}
<!-- Live Status Header -->
